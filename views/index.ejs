<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ระบบสารบรรณอิเล็กทรอนิกส์</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        body { font-family: 'Sarabun', sans-serif; background-color: #f0f2f5; }
        .nav-link { cursor: pointer; font-weight: bold; color: #555; }
        .nav-link.active { color: #0d6efd !important; border-bottom: 3px solid #0d6efd; }
        .section-container { display: none; animation: fadeIn 0.3s; }
        .section-container.active { display: block; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand text-primary" href="#"><i class="fas fa-book-open"></i> งานสารบรรณ</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" onclick="switchTab('search')"><i class="fas fa-search"></i> ค้นหาหนังสือ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="switchTab('manage')"><i class="fas fa-edit"></i> จัดการข้อมูล (เพิ่ม/แก้ไข)</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">

    <div id="searchSection" class="section-container active">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">รายการหนังสือทั้งหมด</h5>
                <div class="d-flex gap-2 align-items-center">
                    <span>เลือกสมุด:</span>
                    <select id="searchSheetSelect" class="form-select form-select-sm w-auto text-dark">
                        <option value="" disabled selected>Loading...</option>
                    </select>
                </div>
            </div>
            <div class="card-body">
                <table id="viewTable" class="table table-hover table-bordered w-100">
                    <thead class="table-light">
                        <tr>
                            <th>เลขทะเบียน</th>
                            <th>วันที่</th>
                            <th>เรื่อง</th>
                            <th>จาก</th>
                            <th>ถึง</th>
                            <th>สถานะ</th>
                            <th>เอกสาร</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="manageSection" class="section-container">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-tools"></i> จัดการข้อมูล</h5>
                <button class="btn btn-success btn-sm" onclick="openModal('add')">
                    <i class="fas fa-plus-circle"></i> ลงรับหนังสือใหม่
                </button>
            </div>
            <div class="card-body">
                <div class="alert alert-info py-2 mb-3">
                    <small><i class="fas fa-info-circle"></i> เลือกสมุดทะเบียนด้านล่างเพื่อดูและแก้ไขข้อมูลในเล่มนั้นๆ</small>
                </div>
                
                <div class="mb-3 d-flex gap-2 align-items-center">
                    <label class="fw-bold">เลือกสมุดที่จะจัดการ:</label>
                    <select id="manageSheetSelect" class="form-select w-auto">
                        <option value="" disabled selected>Loading...</option>
                    </select>
                </div>

                <table id="editTable" class="table table-striped table-bordered w-100">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 80px;">จัดการ</th>
                            <th>เลขทะเบียน</th>
                            <th>เรื่อง</th>
                            <th>วันที่</th>
                            <th>ผู้ปฏิบัติ</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="dataModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalTitle">ลงรับหนังสือ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="docForm">
                    <input type="hidden" name="action" id="formAction" value="add">
                    <input type="hidden" name="rowIndex" id="formRowIndex">
                    <input type="hidden" name="oldFileUrl" id="formOldFileUrl">

                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="fw-bold text-danger">บันทึกลงสมุดทะเบียน:</label>
                            <select name="sheetName" id="formSheetSelect" class="form-select bg-light" required>
                                </select>
                        </div>

                        <div class="col-md-4"><label>เลขทะเบียนรับ</label><input type="text" name="regNo" class="form-control" required></div>
                        <div class="col-md-4"><label>ลงวันที่</label><input type="date" name="date" class="form-control"></div>
                        <div class="col-md-4"><label>ชั้นความลับ</label>
                             <select name="secretLevel" class="form-select"><option value="ปกติ">ปกติ</option><option value="ลับ">ลับ</option></select>
                        </div>
                        
                        <div class="col-12"><label>ชื่อเรื่อง</label><input type="text" name="subject" class="form-control" required></div>
                        <div class="col-md-6"><label>จาก</label><input type="text" name="from" class="form-control"></div>
                        <div class="col-md-6"><label>ถึง</label><input type="text" name="to" class="form-control"></div>
                        
                        <div class="col-12 mt-3 p-3 bg-light border rounded">
                            <label class="fw-bold"><i class="fas fa-paperclip"></i> แนบไฟล์ PDF</label>
                            <input type="file" name="pdfFile" class="form-control mt-1" accept="application/pdf">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-success" onclick="submitForm()">บันทึกข้อมูล</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    let viewTable, editTable;
    let allData = [];

    $(document).ready(function() {
        // 1. โหลดรายชื่อ Sheet ทั้งหมดก่อน
        loadSheetNames();

        // 2. เมื่อเปลี่ยน Dropdown หน้าค้นหา -> โหลดตารางค้นหาใหม่
        $('#searchSheetSelect').change(function() {
            loadTableData($(this).val(), 'view');
        });

        // 3. เมื่อเปลี่ยน Dropdown หน้าจัดการ -> โหลดตารางแก้ไขใหม่
        $('#manageSheetSelect').change(function() {
            loadTableData($(this).val(), 'edit');
        });
    });

    // --- ฟังก์ชันโหลดรายชื่อ Sheet ลง Dropdown ---
    function loadSheetNames() {
        // เรียก API ไปที่ GAS โดยเพิ่ม parameter type=getSheetNames
        fetch('/api/data?type=getSheetNames') // หรือ URL GAS ของคุณ + ?type=getSheetNames
            .then(res => res.json())
            .then(sheets => {
                const searchDD = $('#searchSheetSelect');
                const manageDD = $('#manageSheetSelect');
                const formDD = $('#formSheetSelect');

                searchDD.empty(); manageDD.empty(); formDD.empty();

                sheets.forEach(sheet => {
                    const option = `<option value="${sheet}">${sheet}</option>`;
                    searchDD.append(option);
                    manageDD.append(option);
                    formDD.append(option);
                });

                // โหลดข้อมูลเริ่มต้น (เลือก Sheet แรก)
                if(sheets.length > 0) {
                    loadTableData(sheets[0], 'view');
                    loadTableData(sheets[0], 'edit');
                }
            });
    }

    // --- ฟังก์ชันสลับหน้า Tab ---
    function switchTab(tabName) {
        $('.nav-link').removeClass('active');
        $('.section-container').removeClass('active');

        if(tabName === 'search') {
            $('#searchSection').addClass('active');
            $('.nav-link:eq(0)').addClass('active');
            // รีเฟรชตารางค้นหาเพื่อให้ขนาดคอลัมน์ถูกต้อง
            if(viewTable) viewTable.columns.adjust().draw(); 
        } else {
            $('#manageSection').addClass('active');
            $('.nav-link:eq(1)').addClass('active');
            if(editTable) editTable.columns.adjust().draw();
        }
    }

    // --- ฟังก์ชันโหลดข้อมูลลงตาราง (แยกตารางดู กับ ตารางแก้) ---
    function loadTableData(sheetName, mode) {
        const tableId = mode === 'view' ? '#viewTable' : '#editTable';
        
        // ถ้ามีตารางอยู่แล้วให้ทำลายก่อนสร้างใหม่
        if ($.fn.DataTable.isDataTable(tableId)) {
            $(tableId).DataTable().destroy();
        }

        const columnsConfig = mode === 'view' 
            ? [ // คอลัมน์สำหรับหน้า "ค้นหา" (ดูง่ายๆ)
                { "data": "เลขทะเบียนลงรับ" },
                { "data": "ลงวันที่" },
                { "data": "ชื่อเรื่อง" },
                { "data": "จาก" },
                { "data": "ถึง" },
                { "data": "ชั้นความลับ", "render": d => `<span class="badge bg-secondary">${d}</span>` },
                { "data": "ลิงก์ไฟล์แนบ", "render": d => d ? `<a href="${d}" target="_blank" class="btn btn-sm btn-outline-primary"><i class="fas fa-file-pdf"></i></a>` : '-' }
              ]
            : [ // คอลัมน์สำหรับหน้า "จัดการ" (มีปุ่มแก้ไข)
                { 
                    "data": null,
                    "render": function(data, type, row, meta) {
                        return `<button class="btn btn-warning btn-sm text-white" onclick="openModal('edit', ${meta.row})"><i class="fas fa-edit"></i></button>`;
                    }
                },
                { "data": "เลขทะเบียนลงรับ" },
                { "data": "ชื่อเรื่อง" },
                { "data": "ลงวันที่" },
                { "data": "ผู้ปฏิบัติ" }
              ];

        const dt = $(tableId).DataTable({
            "ajax": {
                "url": "/api/data?sheet=" + encodeURIComponent(sheetName), // แก้ URL ให้ตรงกับ Backend
                "dataSrc": function(json) {
                    if(mode === 'edit') allData = json; // เก็บข้อมูลดิบไว้ใช้ตอนกดปุ่ม Edit
                    return json;
                }
            },
            "columns": columnsConfig,
            "order": [[ 1, "desc" ]], // เรียงตามวันที่ล่าสุด
            "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/th.json" }
        });

        if(mode === 'view') viewTable = dt;
        else editTable = dt;
    }

    // --- ฟังก์ชันเปิด Modal (จัดการ Dropdown Sheet) ---
    function openModal(mode, rowIndex = null) {
        const modal = new bootstrap.Modal(document.getElementById('dataModal'));
        const form = document.getElementById('docForm');
        form.reset();

        // ดึงค่า Sheet ที่เลือกอยู่ในหน้า Manage มาใส่ในฟอร์มอัตโนมัติ
        const currentSheet = $('#manageSheetSelect').val();
        $('#formSheetSelect').val(currentSheet);

        if (mode === 'add') {
            $('#modalTitle').text('เพิ่มข้อมูลใหม่');
            $('#formAction').val('add');
            // ปลดล็อคให้เลือก Sheet อื่นได้ถ้าต้องการ
            // $('#formSheetSelect').prop('disabled', false); 

        } else if (mode === 'edit') {
            const data = allData[rowIndex];
            $('#modalTitle').text('แก้ไขข้อมูล');
            $('#formAction').val('edit');
            $('#formRowIndex').val(data.rowIndex);
            $('#formOldFileUrl').val(data['ลิงก์ไฟล์แนบ']);

            // เติมข้อมูลลงฟอร์ม
            $('input[name="regNo"]').val(data['เลขทะเบียนลงรับ']);
            $('input[name="subject"]').val(data['ชื่อเรื่อง']);
            // ... (เติมฟิลด์อื่นๆ ให้ครบตามเดิม) ...

            // ล็อคไม่ให้เปลี่ยน Sheet ตอนแก้ไข (ป้องกันข้อมูลข้าม Sheet)
            // $('#formSheetSelect').prop('disabled', true); 
        }
        modal.show();
    }

    function submitForm() {
        const fd = new FormData(document.getElementById('docForm'));
        Swal.fire({title:'กำลังบันทึก...', didOpen:()=>Swal.showLoading()});
        fetch('/submit', { method:'POST', body:fd }).then(r=>r.json()).then(d=>{
            if(d.status==='success') Swal.fire('สำเร็จ','','success').then(()=>{
                bootstrap.Modal.getInstance(document.getElementById('dataModal')).hide();
                loadTableData($('#formSheetName').val());
            });
            else Swal.fire('Error', d.message, 'error');
        });
    }

    // --- Import ---
    function openImportModal() {
        $('#excelPasteArea').val('');
        $('#previewTable tbody').empty();
        $('#btnConfirmImport').prop('disabled',true);
        const dd = $('#importSheetName'); dd.empty();
        // ก็อปตัวเลือกสมุดมาใส่ ยกเว้น "ทั้งหมด"
        $('#viewSheetSelector option').each(function(){ if($(this).val()!=='All' && $(this).val()) dd.append($(this).clone()); });
        new bootstrap.Modal(document.getElementById('importModal')).show();
    }
    
    function parseExcelData(text) {
        bulkData = [];
        const rows = text.split(/\r\n|\n/);
        const tbody = $('#previewTable tbody'); tbody.empty();
        rows.forEach(r => {
            if(r.trim()==='') return;
            let cols = r.split('\t');
            while(cols.length < 12) cols.push("");
            cols.push(""); 
            bulkData.push(cols);
            if(bulkData.length<=10) tbody.append(`<tr>${cols.slice(0,12).map(c=>`<td>${c}</td>`).join('')}</tr>`);
        });
        $('#btnConfirmImport').prop('disabled', bulkData.length===0);
    }

    function submitBulkData() {
        Swal.fire({title:`ยืนยัน ${bulkData.length} รายการ?`, showCancelButton:true, confirmButtonText:'ยืนยัน'}).then((res)=>{
            if(res.isConfirmed) {
                Swal.fire({title:'กำลังนำเข้า...', didOpen:()=>Swal.showLoading()});
                fetch('/api/bulk-submit', {
                    method:'POST', headers:{'Content-Type':'application/json'},
                    body:JSON.stringify({sheetName:$('#importSheetName').val(), rows:bulkData})
                }).then(r=>r.json()).then(d=>{
                    Swal.fire('สำเร็จ','','success').then(()=>{
                        bootstrap.Modal.getInstance(document.getElementById('importModal')).hide();
                        loadTableData($('#importSheetName').val());
                    });
                });
            }
        });
    }
</script>
</body>
</html>
