<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ระบบงานสารบรรณ</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body { font-family: 'Sarabun', sans-serif; background-color: #f4f6f9; font-size: 14px;}
        .container-fluid { padding: 20px; max-width: 100%; }
        a.doc-link { color: #0d6efd; text-decoration: none; font-weight: bold; }
        a.doc-link:hover { text-decoration: underline; color: #0a58ca; }
        .header-controls { display: flex; align-items: center; gap: 10px; }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h5 class="mb-0 text-primary"><i class="fas fa-book"></i> ระบบทะเบียนรับหนังสือ</h5>
            <div class="header-controls">
                <label>สมุด:</label>
                <select id="viewSheetSelector" class="form-select form-select-sm w-auto" style="min-width: 150px;">
                    <option value="" disabled selected>กำลังโหลด...</option>
                </select>
                <button class="btn btn-secondary btn-sm" onclick="openSettingsModal()" title="ตั้งค่าตัวเลือก">
                    <i class="fas fa-cog"></i>
                </button>
                <button class="btn btn-primary btn-sm ms-2" onclick="openModal('add')">
                    <i class="fas fa-plus"></i> ลงรับหนังสือ
                </button>
            </div>
        </div>
        
        <div class="card-body">
            <table id="docTable" class="table table-bordered table-hover w-100 table-sm">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;" class="text-center">แก้ไข</th>
                        <th>สมุด</th>
                        <th>เลขทะเบียน</th>
                        <th>ลงวันที่</th>
                        <th>เรื่อง</th>
                        <th>จาก</th>
                        <th>ถึง</th>
                        <th>ฝ่าย</th>
                        <th>ชั้นความลับ</th>
                        <th>ชั้นความเร็ว</th>
                        <th>ผู้ปฏิบัติ</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="dataModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalTitle">ฟอร์มบันทึกข้อมูล</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="docForm">
                    <input type="hidden" name="action" id="formAction" value="add">
                    <input type="hidden" name="rowIndex" id="formRowIndex">
                    <input type="hidden" name="oldFileUrl" id="formOldFileUrl">
                    <div class="alert alert-warning d-none py-2 mb-3" id="editAlert"><small>กำลังแก้ไขข้อมูล</small></div>

                    <div class="row g-2">
                        <div class="col-12 mb-2">
                            <label class="fw-bold">บันทึกลงสมุดทะเบียน</label>
                            <select name="sheetName" id="formSheetName" class="form-select bg-light"></select>
                        </div>

                        <div class="col-md-3"><label>เลขทะเบียนรับ</label><input type="text" name="regNo" class="form-control" required></div>
                        <div class="col-md-3"><label>ลงวันที่</label><input type="date" name="date" class="form-control"></div>
                        
                        <div class="col-md-3"><label>ชั้นความลับ</label>
                             <select name="secretLevel" id="formSecret" class="form-select"></select>
                        </div>
                        <div class="col-md-3"><label>ชั้นความเร็ว</label>
                             <select name="speedLevel" id="formSpeed" class="form-select"></select>
                        </div>
                        
                        <div class="col-md-4"><label>เลขที่หนังสือ</label><input type="text" name="bookNo" class="form-control"></div>
                        <div class="col-md-4"><label>จาก</label><input type="text" name="from" class="form-control"></div>
                        <div class="col-md-4"><label>ถึง</label><input type="text" name="to" class="form-control"></div>
                        
                        <div class="col-12"><label>ชื่อเรื่อง</label><input type="text" name="subject" class="form-control" required></div>
                        
                        <div class="col-md-6"><label>ฝ่ายเจ้าของเรื่อง</label>
                             <select name="dept" id="formDept" class="form-select"></select>
                        </div>
                        <div class="col-md-6"><label>ผู้ปฏิบัติ</label>
                             <select name="worker" id="formWorker" class="form-select"></select>
                        </div>
                        <div class="col-md-6"><label>วิธีรับ</label>
                             <select name="method" id="formMethod" class="form-select"></select>
                        </div>
                        
                        <div class="col-md-6"><label>หมายเหตุ</label><input type="text" name="remark" class="form-control"></div>

                        <div class="col-12 mt-3 p-3 bg-light border rounded">
                            <label class="fw-bold"><i class="fas fa-paperclip"></i> ไฟล์เอกสาร (PDF)</label>
                            <input type="file" name="pdfFile" class="form-control mt-1" accept="application/pdf">
                            <div id="currentFileLink" class="mt-2 small text-primary"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                <button type="button" class="btn btn-primary" onclick="submitForm()">บันทึกข้อมูล</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="settingsModal" tabindex="-1">
    <div class="modal-dialog modal-lg"> <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title"><i class="fas fa-cogs"></i> จัดการตัวเลือก (Dropdown)</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 border-end">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
                            <button class="nav-link active" onclick="renderSettingTable('sheet')">สมุดทะเบียน</button>
                            <button class="nav-link" onclick="renderSettingTable('secret')">ชั้นความลับ</button>
                            <button class="nav-link" onclick="renderSettingTable('speed')">ชั้นความเร็ว</button>
                            <button class="nav-link" onclick="renderSettingTable('dept')">ฝ่าย/แผนก</button>
                            <button class="nav-link" onclick="renderSettingTable('worker')">ผู้ปฏิบัติ</button>
                            <button class="nav-link" onclick="renderSettingTable('method')">วิธีรับ</button>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h6 id="settingCategoryTitle" class="fw-bold text-primary mb-3">สมุดทะเบียน</h6>
                        <table class="table table-bordered table-sm" id="settingsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>ชื่อที่แสดง (Label)</th>
                                    <th>ค่าที่บันทึก (Value)</th>
                                    <th style="width:50px">ลบ</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <button class="btn btn-sm btn-success w-100" onclick="addSettingRow()">+ เพิ่มรายการใหม่</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveAllSettings()">บันทึกการตั้งค่าทั้งหมด</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    let table;
    let allData = [];
    // ตัวแปรเก็บ Settings ทั้งหมดไว้ในความจำ
    let globalSettings = {
        sheet: [], secret: [], speed: [], dept: [], worker: [], method: []
    };
    let currentCategoryEdit = 'sheet'; // จำว่ากำลังแก้หมวดไหนอยู่

    $(document).ready(function() {
        // 1. โหลด Settings ทั้งหมด
        loadGlobalSettings().then(() => {
            // 2. โหลดตารางข้อมูล
            const initialSheet = $('#viewSheetSelector').val();
            if(initialSheet) loadTableData(initialSheet);
        });

        $('#viewSheetSelector').on('change', function() { loadTableData($(this).val()); });
    });

    // --- ส่วนจัดการ Settings ---
    async function loadGlobalSettings() {
        try {
            const response = await fetch('/api/settings');
            const data = await response.json(); // { sheet:[], secret:[], ... }
            
            // ถ้ามีข้อมูลให้ update ตัวแปร global, ถ้าไม่มีให้ใช้ค่า default ว่างๆ
            if(data && Object.keys(data).length > 0) {
                globalSettings = data;
            } else {
                // Default เริ่มต้นถ้าเพิ่งสร้างครั้งแรก
                globalSettings = {
                   sheet: [{label: 'สมุดทะเบียนหลัก', value: 'Sheet1'}],
                   secret: [{label: 'ปกติ', value: 'ปกติ'}, {label: 'ลับ', value: 'ลับ'}],
                   speed: [{label: 'ปกติ', value: 'ปกติ'}, {label: 'ด่วน', value: 'ด่วน'}],
                   dept: [{label: 'ธุรการ', value: 'ธุรการ'}],
                   worker: [{label: '-', value: '-'}],
                   method: [{label: 'Email', value: 'Email'}]
                };
            }

            // Populate Dropdowns หน้าเว็บ
            populateDropdown('#viewSheetSelector', globalSettings.sheet, true); // มี "ทั้งหมด"
            populateDropdown('#formSheetName', globalSettings.sheet);
            populateDropdown('#formSecret', globalSettings.secret);
            populateDropdown('#formSpeed', globalSettings.speed);
            populateDropdown('#formDept', globalSettings.dept);
            populateDropdown('#formWorker', globalSettings.worker);
            populateDropdown('#formMethod', globalSettings.method);

        } catch (err) { console.error(err); }
    }

    function populateDropdown(selector, items, includeAll = false) {
        const dropdown = $(selector);
        dropdown.empty();
        if(includeAll) dropdown.append('<option value="All" style="font-weight:bold;">--- ค้นหาทั้งหมด ---</option>');
        
        if (items && items.length > 0) {
            items.forEach(item => {
                dropdown.append(`<option value="${item.value}">${item.label}</option>`);
            });
        }
    }

    // เปิด Modal Settings
    function openSettingsModal() {
        const modal = new bootstrap.Modal(document.getElementById('settingsModal'));
        renderSettingTable('sheet'); // เปิดมาเจอหมวด sheet ก่อน
        modal.show();
    }

    // เรนเดอร์ตารางตั้งค่า ตามหมวดที่เลือก
    function renderSettingTable(category) {
        currentCategoryEdit = category;
        
        // Update Active Tab UI
        $('.nav-link').removeClass('active');
        $(`.nav-link[onclick="renderSettingTable('${category}')"]`).addClass('active');

        // Update Title
        const titles = { sheet: 'สมุดทะเบียน', secret: 'ชั้นความลับ', speed: 'ชั้นความเร็ว', dept: 'ฝ่าย/แผนก', worker: 'ผู้ปฏิบัติ', method: 'วิธีรับ' };
        $('#settingCategoryTitle').text(titles[category]);

        // Render Rows
        const tbody = $('#settingsTable tbody');
        tbody.empty();
        
        // ดึงค่าจาก globalSettings มาโชว์
        const items = globalSettings[category] || [];
        items.forEach(item => {
            addSettingRow(item.label, item.value);
        });
    }

    function addSettingRow(label = '', value = '') {
        const tr = `
            <tr>
                <td><input type="text" class="form-control form-control-sm set-label" value="${label}"></td>
                <td><input type="text" class="form-control form-control-sm set-value" value="${value}"></td>
                <td class="text-center"><button class="btn btn-danger btn-sm" onclick="$(this).closest('tr').remove()"><i class="fas fa-trash"></i></button></td>
            </tr>
        `;
        $('#settingsTable tbody').append(tr);
    }

    // บันทึก Settings กลับไป Server
    function saveAllSettings() {
        // 1. เซฟค่าจากตารางปัจจุบัน ลงตัวแปร global ก่อน (เพราะตารางโชว์แค่หมวดเดียว)
        const currentItems = [];
        $('#settingsTable tbody tr').each(function() {
            const l = $(this).find('.set-label').val().trim();
            const v = $(this).find('.set-value').val().trim();
            if(l && v) currentItems.push({label: l, value: v});
        });
        globalSettings[currentCategoryEdit] = currentItems;

        // 2. แปลง globalSettings เป็น Array แบบ Flat เพื่อส่งให้ Google Sheet
        // Format: [[category, label, value], ...]
        let flatSettings = [];
        Object.keys(globalSettings).forEach(cat => {
            globalSettings[cat].forEach(item => {
                flatSettings.push([cat, item.label, item.value]);
            });
        });

        Swal.fire({ title: 'กำลังบันทึก...', didOpen: () => Swal.showLoading() });

        fetch('/api/save-settings', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ settings: flatSettings })
        })
        .then(res => res.json())
        .then(data => {
            Swal.fire('สำเร็จ', 'บันทึกการตั้งค่าแล้ว', 'success').then(() => {
                location.reload();
            });
        });
    }

    // --- ส่วน DataTables & Forms (เหมือนเดิม แต่เพิ่มคอลัมน์สมุด) ---
    function loadTableData(sheetName) {
        if ($.fn.DataTable.isDataTable('#docTable')) { $('#docTable').DataTable().destroy(); }

        table = $('#docTable').DataTable({
            "ajax": {
                "url": "/api/data?sheet=" + encodeURIComponent(sheetName),
                "dataSrc": function(json) { allData = json; return json; }
            },
            "columns": [
                { 
                    "data": null, "className": "text-center",
                    "render": function(data, type, row, meta) {
                        return `<button class="btn btn-warning btn-edit text-white" onclick="openModal('edit', ${meta.row})"><i class="fas fa-pen"></i></button>`;
                    }
                },
                { 
                    "data": "sheetName", "visible": sheetName === 'All',
                    "render": function(data) { return `<span class="badge bg-secondary">${data}</span>`; }
                },
                { 
                    "data": "เลขทะเบียนลงรับ",
                    "render": function(data, type, row) {
                        const link = row['ลิงก์ไฟล์แนบ'];
                        if (link && link.includes('http')) return `<a href="${link}" target="_blank" class="doc-link"><i class="fas fa-file-pdf"></i> ${data}</a>`;
                        return data || '-';
                    }
                },
                { "data": "ลงวันที่", "defaultContent": "-" },
                { "data": "ชื่อเรื่อง", "defaultContent": "" },
                { "data": "จาก", "defaultContent": "" },
                { "data": "ถึง", "defaultContent": "" },
                { "data": "ฝ่าย", "defaultContent": "" },
                { "data": "ชั้นความลับ", "defaultContent": "" },
                { "data": "ชั้นความเร็ว", "defaultContent": "" },
                { "data": "ผู้ปฏิบัติ", "defaultContent": "" }
            ],
            "order": [[ 2, "desc" ]], // เรียงเลขทะเบียน
            "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/th.json" }
        });
    }

    function openModal(mode, tableRowIndex = null) {
        const modal = new bootstrap.Modal(document.getElementById('dataModal'));
        const form = document.getElementById('docForm');
        form.reset();
        $('#currentFileLink').html('');
        
        // ถ้าเพิ่มใหม่ ให้ Dropdown เลือกค่าแรกสุดเป็น Default
        if (mode === 'add') {
            $('#modalTitle').text('ลงรับหนังสือใหม่');
            $('#formAction').val('add');
            $('#editAlert').addClass('d-none');
            // ซิงค์ Sheet
            const curSheet = $('#viewSheetSelector').val();
            if(curSheet && curSheet !== 'All') $('#formSheetName').val(curSheet);
            
            $('input[name="date"]').val(new Date().toISOString().split('T')[0]);

        } else if (mode === 'edit') {
            const data = allData[tableRowIndex];
            $('#modalTitle').text('แก้ไขข้อมูล');
            $('#formAction').val('edit');
            $('#formRowIndex').val(data.rowIndex);
            $('#formOldFileUrl').val(data['ลิงก์ไฟล์แนบ']);
            $('#editAlert').removeClass('d-none');

            // Set Dropdowns
            if(data.sheetName) $('#formSheetName').val(data.sheetName);
            $('#formSecret').val(data['ชั้นความลับ']);
            $('#formSpeed').val(data['ชั้นความเร็ว']);
            $('#formDept').val(data['ฝ่าย']);
            $('#formWorker').val(data['ผู้ปฏิบัติ']);
            $('#formMethod').val(data['วิธีการรับเอกสาร']);

            // Set Inputs
            $('input[name="regNo"]').val(data['เลขทะเบียนลงรับ']);
            $('input[name="bookNo"]').val(data['เลขที่หนังสือ']);
            $('input[name="subject"]').val(data['ชื่อเรื่อง']);
            $('input[name="from"]').val(data['จาก']);
            $('input[name="to"]').val(data['ถึง']);
            $('input[name="remark"]').val(data['หมายเหตุ']);

            if(data['ลงวันที่']) {
                let d = data['ลงวันที่'];
                if(d.includes('/')) {
                   const p = d.split('/');
                   if(p.length===3) d = `${p[2]}-${p[1]}-${p[0]}`;
                }
                $('input[name="date"]').val(d);
            }

            if(data['ลิงก์ไฟล์แนบ']) {
                $('#currentFileLink').html(`<i class="fas fa-check-circle text-success"></i> มีไฟล์เดิม: <a href="${data['ลิงก์ไฟล์แนบ']}" target="_blank">เปิดดู</a>`);
            }
        }
        modal.show();
    }

    function submitForm() {
        const form = document.getElementById('docForm');
        const formData = new FormData(form);
        Swal.fire({ title: 'กำลังบันทึก...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
        fetch('/submit', { method: 'POST', body: formData })
        .then(res => res.json())
        .then(data => {
            if(data.status === 'success') {
                Swal.fire('สำเร็จ', 'บันทึกเรียบร้อย', 'success').then(() => {
                    bootstrap.Modal.getInstance(document.getElementById('dataModal')).hide();
                    loadTableData($('#formSheetName').val());
                });
            } else { Swal.fire('Error', data.message, 'error'); }
        })
        .catch(err => Swal.fire('Error', 'เชื่อมต่อ Server ไม่ได้', 'error'));
    }
</script>
</body>
</html>
