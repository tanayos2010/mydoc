<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ระบบงานสารบรรณ</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body { font-family: 'Sarabun', sans-serif; background-color: #f4f6f9; font-size: 14px;}
        .container-fluid { padding: 20px; max-width: 100%; }
        a.doc-link { color: #0d6efd; text-decoration: none; font-weight: bold; }
        a.doc-link:hover { text-decoration: underline; color: #0a58ca; }
        .header-controls { display: flex; align-items: center; gap: 10px; }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h5 class="mb-0 text-primary"><i class="fas fa-book"></i> ระบบทะเบียนรับหนังสือ</h5>
            <div class="header-controls">
                <label>สมุด:</label>
                <select id="viewSheetSelector" class="form-select form-select-sm w-auto" style="min-width: 150px;"></select>
                <button class="btn btn-secondary btn-sm" onclick="openSettingsModal()" title="ตั้งค่าตัวเลือก"><i class="fas fa-cog"></i></button>
                <button class="btn btn-primary btn-sm ms-2" onclick="openModal('add')"><i class="fas fa-plus"></i> ลงรับหนังสือ</button>
                <button class="btn btn-success btn-sm ms-2" onclick="openImportModal()"><i class="fas fa-file-excel"></i> นำเข้า Excel</button>
            </div>
        </div>
        <div class="card-body">
            <table id="docTable" class="table table-bordered table-hover w-100 table-sm">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;" class="text-center">แก้ไข</th>
                        <th>สมุด</th>
                        <th>เลขทะเบียน</th>
                        <th>ลงวันที่</th>
                        <th>เรื่อง</th>
                        <th>จาก</th>
                        <th>ถึง</th>
                        <th>ฝ่าย</th>
                        <th>ชั้นความลับ</th>
                        <th>ชั้นความเร็ว</th>
                        <th>ผู้ปฏิบัติ</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="dataModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalTitle">ฟอร์มบันทึกข้อมูล</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="docForm">
                    <input type="hidden" name="action" id="formAction" value="add">
                    <input type="hidden" name="rowIndex" id="formRowIndex">
                    <input type="hidden" name="oldFileUrl" id="formOldFileUrl">
                    <div class="alert alert-warning d-none py-2 mb-3" id="editAlert"><small>กำลังแก้ไขข้อมูล</small></div>

                    <div class="row g-2">
                        <div class="col-12 mb-2">
                            <label class="fw-bold">บันทึกลงสมุดทะเบียน</label>
                            <select name="sheetName" id="formSheetName" class="form-select bg-light"></select>
                        </div>
                        <div class="col-md-3"><label>เลขทะเบียนรับ</label><input type="text" name="regNo" class="form-control" required></div>
                        <div class="col-md-3"><label>ลงวันที่</label><input type="date" name="date" class="form-control"></div>
                        <div class="col-md-3"><label>ชั้นความลับ</label><select name="secretLevel" id="formSecret" class="form-select"></select></div>
                        <div class="col-md-3"><label>ชั้นความเร็ว</label><select name="speedLevel" id="formSpeed" class="form-select"></select></div>
                        <div class="col-md-4"><label>เลขที่หนังสือ</label><input type="text" name="bookNo" class="form-control"></div>
                        <div class="col-md-4"><label>จาก</label><input type="text" name="from" class="form-control"></div>
                        <div class="col-md-4"><label>ถึง</label><input type="text" name="to" class="form-control"></div>
                        <div class="col-12"><label>ชื่อเรื่อง</label><input type="text" name="subject" class="form-control" required></div>
                        <div class="col-md-6"><label>ฝ่ายเจ้าของเรื่อง</label><select name="dept" id="formDept" class="form-select"></select></div>
                        <div class="col-md-6"><label>ผู้ปฏิบัติ</label><select name="worker" id="formWorker" class="form-select"></select></div>
                        <div class="col-md-6"><label>วิธีรับ</label><select name="method" id="formMethod" class="form-select"></select></div>
                        <div class="col-md-6"><label>หมายเหตุ</label><input type="text" name="remark" class="form-control"></div>
                        <div class="col-12 mt-3 p-3 bg-light border rounded">
                            <label class="fw-bold"><i class="fas fa-paperclip"></i> ไฟล์เอกสาร (PDF)</label>
                            <input type="file" name="pdfFile" class="form-control mt-1" accept="application/pdf">
                            <div id="currentFileLink" class="mt-2 small text-primary"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                <button type="button" class="btn btn-primary" onclick="submitForm()">บันทึกข้อมูล</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="settingsModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title"><i class="fas fa-cogs"></i> จัดการตัวเลือก</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 border-end">
                        <div class="nav flex-column nav-pills" id="v-pills-tab">
                            <button class="nav-link active" onclick="switchCategory('sheet')">สมุดทะเบียน</button>
                            <button class="nav-link" onclick="switchCategory('secret')">ชั้นความลับ</button>
                            <button class="nav-link" onclick="switchCategory('speed')">ชั้นความเร็ว</button>
                            <button class="nav-link" onclick="switchCategory('dept')">ฝ่าย/แผนก</button>
                            <button class="nav-link" onclick="switchCategory('worker')">ผู้ปฏิบัติ</button>
                            <button class="nav-link" onclick="switchCategory('method')">วิธีรับ</button>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h6 id="settingCategoryTitle" class="fw-bold text-primary mb-3">สมุดทะเบียน</h6>
                        <table class="table table-bordered table-sm" id="settingsTable">
                            <thead class="table-light"></thead>
                            <tbody></tbody>
                        </table>
                        <button class="btn btn-sm btn-success w-100" onclick="addSettingRow()">+ เพิ่มรายการใหม่</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="saveAllSettings()">บันทึกการตั้งค่าทั้งหมด</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">นำเข้าข้อมูลจาก Excel</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <textarea id="excelPasteArea" class="form-control mb-2" rows="5" placeholder="วางข้อมูลที่นี่..."></textarea>
                <select id="importSheetName" class="form-select w-auto mb-2"></select>
                <div class="table-responsive">
                    <table class="table table-bordered table-sm small" id="previewTable">
                        <thead class="table-light"><tr><th>ทะเบียน</th><th>ลับ</th><th>เร็ว</th><th>เลขที่</th><th>วันที่</th><th>จาก</th><th>ถึง</th><th>เรื่อง</th><th>ฝ่าย</th><th>ผู้ปฏิบัติ</th><th>วิธี</th><th>หมายเหตุ</th></tr></thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="submitBulkData()" id="btnConfirmImport" disabled>ยืนยัน</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    let table;
    let allData = [];
    let bulkData = [];
    let globalSettings = { sheet: [], secret: [], speed: [], dept: [], worker: [], method: [] };
    let currentCategoryEdit = 'sheet';

    $(document).ready(function() {
        loadGlobalSettings().then(() => {
            const initialSheet = $('#viewSheetSelector').val();
            // ถ้าโหลดมาแล้วไม่มีสมุดสักเล่ม ให้แสดงเตือน
            if(!initialSheet) {
                Swal.fire('ยินดีต้อนรับ', 'กรุณาไปที่ปุ่ม "เฟือง" เพื่อตั้งค่าสมุดทะเบียนก่อนใช้งานนะครับ', 'info');
            } else {
                loadTableData(initialSheet);
            }
        });
        $('#viewSheetSelector').on('change', function() { loadTableData($(this).val()); });
        $('#excelPasteArea').on('input', function() { parseExcelData($(this).val()); });
    });

    async function loadGlobalSettings() {
        try {
            const response = await fetch('/api/settings');
            const data = await response.json();
            if(data && Object.keys(data).length > 0) globalSettings = data;
            
            // Populate Dropdowns
            // 1. สมุดทะเบียน (ไม่เอาช่องว่าง)
            populateDropdown('#viewSheetSelector', globalSettings.sheet, true, false);
            populateDropdown('#formSheetName', globalSettings.sheet, false, false);
            populateDropdown('#importSheetName', globalSettings.sheet, false, false);

            // 2. ข้อมูลทั่วไป (เพิ่ม true ตัวหลังสุด เพื่อขอช่องว่าง)
            populateDropdown('#formSecret', globalSettings.secret, false, true);
            populateDropdown('#formSpeed', globalSettings.speed, false, true);
            populateDropdown('#formDept', globalSettings.dept, false, true);
            populateDropdown('#formWorker', globalSettings.worker, false, true);
            populateDropdown('#formMethod', globalSettings.method, false, true);
        } catch (err) { console.error(err); }
    }

    function populateDropdown(selector, items, includeAll = false) {
        const dropdown = $(selector);
        dropdown.empty();
        if(includeAll) dropdown.append('<option value="All" style="font-weight:bold;">--- ค้นหาทั้งหมด ---</option>');
        if(includeBlank) {
        dropdown.append('<option value="">-</option>');
    }
        if (items) items.forEach(item => dropdown.append(`<option value="${item.value}">${item.label}</option>`));
    }

    // --- Settings Logic Fix ---
    function openSettingsModal() {
        currentCategoryEdit = 'sheet';
        renderSettingTable('sheet');
        new bootstrap.Modal(document.getElementById('settingsModal')).show();
    }

    function switchCategory(newCategory) {
        captureCurrentTableData(); // จำค่าหน้าเก่าก่อน
        renderSettingTable(newCategory); // แล้วค่อยเรนเดอร์หน้าใหม่
    }

    function captureCurrentTableData() {
        const currentItems = [];
        $('#settingsTable tbody tr').each(function() {
            if (currentCategoryEdit === 'sheet') {
                const l = $(this).find('.set-label').val().trim();
                const v = $(this).find('.set-value').val().trim();
                if(l && v) currentItems.push({label: l, value: v});
            } else {
                const v = $(this).find('.set-single-value').val().trim();
                if(v) currentItems.push({label: v, value: v}); // Label = Value สำหรับหมวดทั่วไป
            }
        });
        globalSettings[currentCategoryEdit] = currentItems;
    }

    function renderSettingTable(category) {
        currentCategoryEdit = category;
        $('.nav-link').removeClass('active');
        $(`.nav-link[onclick="switchCategory('${category}')"]`).addClass('active');

        const titles = { sheet: 'สมุดทะเบียน', secret: 'ชั้นความลับ', speed: 'ชั้นความเร็ว', dept: 'ฝ่าย/แผนก', worker: 'ผู้ปฏิบัติ', method: 'วิธีรับ' };
        $('#settingCategoryTitle').text(titles[category]);

        const thead = $('#settingsTable thead');
        thead.empty();
        if (category === 'sheet') {
            thead.append('<tr><th>ชื่อที่แสดง (เช่น ปี 67)</th><th>ชื่อ Sheet (เช่น Sheet67)</th><th style="width:50px">ลบ</th></tr>');
        } else {
            thead.append('<tr><th>ชื่อข้อมูล</th><th style="width:50px">ลบ</th></tr>');
        }

        const tbody = $('#settingsTable tbody');
        tbody.empty();
        const items = globalSettings[category] || [];
        items.forEach(item => addSettingRow(item.label, item.value));
    }

    function addSettingRow(label = '', value = '') {
        let tr = '';
        if (currentCategoryEdit === 'sheet') {
            tr = `<tr>
                <td><input type="text" class="form-control form-control-sm set-label" value="${label}" placeholder="ชื่อโชว์"></td>
                <td><input type="text" class="form-control form-control-sm set-value" value="${value}" placeholder="ชื่อ Sheet"></td>
                <td class="text-center"><button class="btn btn-danger btn-sm" onclick="$(this).closest('tr').remove()"><i class="fas fa-trash"></i></button></td>
            </tr>`;
        } else {
            // หมวดอื่นๆ มีช่องเดียว
            tr = `<tr>
                <td><input type="text" class="form-control form-control-sm set-single-value" value="${value}" placeholder="ใส่ข้อมูล"></td>
                <td class="text-center"><button class="btn btn-danger btn-sm" onclick="$(this).closest('tr').remove()"><i class="fas fa-trash"></i></button></td>
            </tr>`;
        }
        $('#settingsTable tbody').append(tr);
    }

    function saveAllSettings() {
        captureCurrentTableData(); // จำค่าหน้าปัจจุบันก่อนกด Save
        
        let flatSettings = [];
        Object.keys(globalSettings).forEach(cat => {
            globalSettings[cat].forEach(item => {
                flatSettings.push([cat, item.label, item.value]);
            });
        });

        Swal.fire({ title: 'กำลังบันทึก...', didOpen: () => Swal.showLoading() });
        fetch('/api/save-settings', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ settings: flatSettings })
        })
        .then(res => res.json())
        .then(data => {
            Swal.fire('สำเร็จ', 'บันทึกเรียบร้อย', 'success').then(() => location.reload());
        });
    }

    // --- DataTables & Forms ---
    function loadTableData(sheetName) {
        if ($.fn.DataTable.isDataTable('#docTable')) { $('#docTable').DataTable().destroy(); }
        table = $('#docTable').DataTable({
            "ajax": {
                "url": "/api/data?sheet=" + encodeURIComponent(sheetName),
                "dataSrc": function(json) { allData = json; return json; }
            },
            "columns": [
                { "data": null, "className": "text-center", "render": function(data, type, row, meta) {
                        return `<button class="btn btn-warning btn-edit text-white" onclick="openModal('edit', ${meta.row})"><i class="fas fa-pen"></i></button>`;
                }},
                { "data": "sheetName", "visible": sheetName === 'All', "render": function(d) { return `<span class="badge bg-secondary">${d}</span>`; } },
                { "data": "เลขทะเบียนลงรับ", "render": function(d, t, r) {
                    if (r['ลิงก์ไฟล์แนบ'] && r['ลิงก์ไฟล์แนบ'].includes('http')) return `<a href="${r['ลิงก์ไฟล์แนบ']}" target="_blank" class="doc-link"><i class="fas fa-file-pdf"></i> ${d}</a>`;
                    return d || '-';
                }},
                { "data": "ลงวันที่", "defaultContent": "-" },
                { "data": "ชื่อเรื่อง", "defaultContent": "" },
                { "data": "จาก", "defaultContent": "" },
                { "data": "ถึง", "defaultContent": "" },
                { "data": "ฝ่าย", "defaultContent": "" },
                { "data": "ชั้นความลับ", "defaultContent": "" },
                { "data": "ชั้นความเร็ว", "defaultContent": "" },
                { "data": "ผู้ปฏิบัติ", "defaultContent": "" }
            ],
            "order": [[ 2, "desc" ]],
            "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/th.json" }
        });
    }

    function openModal(mode, rowIdx = null) {
        const modal = new bootstrap.Modal(document.getElementById('dataModal'));
        document.getElementById('docForm').reset();
        
        if (mode === 'add') {
            $('#modalTitle').text('ลงรับหนังสือใหม่');
            $('#formAction').val('add');
            $('#editAlert').addClass('d-none');
            const cur = $('#viewSheetSelector').val();
            // ตรวจสอบว่าเลือกสมุดหรือยัง
            if(!cur || cur === 'All' && $('#formSheetName option').length === 0) {
                 Swal.fire('แจ้งเตือน', 'กรุณาตั้งค่ารายชื่อสมุดทะเบียนก่อน (ที่ปุ่มเฟือง)', 'warning');
                 return;
            }
            if(cur && cur !== 'All') $('#formSheetName').val(cur);
            $('input[name="date"]').val(new Date().toISOString().split('T')[0]);

        } else if (mode === 'edit') {
            const data = allData[rowIdx];
            $('#modalTitle').text('แก้ไขข้อมูล');
            $('#formAction').val('edit');
            $('#formRowIndex').val(data.rowIndex);
            $('#formOldFileUrl').val(data['ลิงก์ไฟล์แนบ']);
            $('#editAlert').removeClass('d-none');

            // Set Values
            if(data.sheetName) $('#formSheetName').val(data.sheetName);
            $('#formSecret').val(data['ชั้นความลับ']);
            $('#formSpeed').val(data['ชั้นความเร็ว']);
            $('#formDept').val(data['ฝ่าย']);
            $('#formWorker').val(data['ผู้ปฏิบัติ']);
            $('#formMethod').val(data['วิธีการรับเอกสาร']);

            $('input[name="regNo"]').val(data['เลขทะเบียนลงรับ']);
            $('input[name="bookNo"]').val(data['เลขที่หนังสือ']);
            $('input[name="subject"]').val(data['ชื่อเรื่อง']);
            $('input[name="from"]').val(data['จาก']);
            $('input[name="to"]').val(data['ถึง']);
            $('input[name="remark"]').val(data['หมายเหตุ']);
            
            if(data['ลงวันที่']) {
                let d = data['ลงวันที่'];
                if(d.includes('/')) { const p=d.split('/'); if(p.length===3) d=`${p[2]}-${p[1]}-${p[0]}`; }
                $('input[name="date"]').val(d);
            }
        }
        modal.show();
    }

    function submitForm() {
        const fd = new FormData(document.getElementById('docForm'));
        Swal.fire({title:'กำลังบันทึก...', didOpen:()=>Swal.showLoading()});
        fetch('/submit', { method:'POST', body:fd }).then(r=>r.json()).then(d=>{
            if(d.status==='success') Swal.fire('สำเร็จ','','success').then(()=>{
                bootstrap.Modal.getInstance(document.getElementById('dataModal')).hide();
                loadTableData($('#formSheetName').val());
            });
            else Swal.fire('Error', d.message, 'error');
        });
    }

    // --- Bulk Import ---
    function openImportModal() {
        $('#excelPasteArea').val('');
        $('#previewTable tbody').empty();
        $('#btnConfirmImport').prop('disabled',true);
        const dd = $('#importSheetName'); dd.empty();
        $('#viewSheetSelector option').each(function(){ if($(this).val()!=='All' && $(this).val()) dd.append($(this).clone()); });
        new bootstrap.Modal(document.getElementById('importModal')).show();
    }
    
    function parseExcelData(text) {
        bulkData = [];
        const rows = text.split(/\r\n|\n/);
        const tbody = $('#previewTable tbody'); tbody.empty();
        rows.forEach(r => {
            if(r.trim()==='') return;
            let cols = r.split('\t');
            while(cols.length < 12) cols.push("");
            cols.push(""); 
            bulkData.push(cols);
            if(bulkData.length<=10) tbody.append(`<tr>${cols.slice(0,12).map(c=>`<td>${c}</td>`).join('')}</tr>`);
        });
        $('#btnConfirmImport').prop('disabled', bulkData.length===0);
    }

    function submitBulkData() {
        Swal.fire({title:`ยืนยัน ${bulkData.length} รายการ?`, showCancelButton:true, confirmButtonText:'ยืนยัน'}).then((res)=>{
            if(res.isConfirmed) {
                Swal.fire({title:'กำลังนำเข้า...', didOpen:()=>Swal.showLoading()});
                fetch('/api/bulk-submit', {
                    method:'POST', headers:{'Content-Type':'application/json'},
                    body:JSON.stringify({sheetName:$('#importSheetName').val(), rows:bulkData})
                }).then(r=>r.json()).then(d=>{
                    Swal.fire('สำเร็จ','','success').then(()=>{
                        bootstrap.Modal.getInstance(document.getElementById('importModal')).hide();
                        loadTableData($('#importSheetName').val());
                    });
                });
            }
        });
    }
</script>
</body>
</html>
